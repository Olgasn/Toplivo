@model CW_ADB_MVC.Models.Fuels

@{
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удаление</h2>
<h4>@ViewBag.Title</h4>
<h3>Вы действительно хотите удалить запись? Будут удалены и все данные, связанные с операциями с этим топливом!</h3>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FuelType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FuelDensity)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FuelDensity)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Вернуться к общему списку", "Index")
        </div>
    }
</div>
